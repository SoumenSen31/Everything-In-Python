{
  "name": "Python Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.11",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "openai.chatgpt"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "pip install --upgrade pip && pip install -r /workspaces/Everything-In-Python/requirements.txt || true",
  "remoteUser": "vscode"
}
